<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>natives-ios</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory>/META-INF/robovm/ios</outputDirectory>
        <includes>
          <include>robovm.xml</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/ios</directory>
      <outputDirectory>/META-INF/robovm/ios/libs</outputDirectory>
      <includes>
        <include>*.a</include>
      </includes>
    </fileSet>
    <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory>/META-INF/robovm/tvos</outputDirectory>
        <includes>
          <include>robovm.xml</include>
        </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/ios/libgdx-freetype.a.tvos</source>
      <outputDirectory>/META-INF/robovm/tvos/libs</outputDirectory>
      <destName>libgdx-freetype.a</destName>
    </file>
  </files>
</assembly>
